<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CirclesFragment">

    <TextView
        android:id="@+id/circles_module_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/circles_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_circle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/first_circle"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circles_module_title" />

    <TextView
        android:id="@+id/first_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/coord_x"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_circle_title" />

    <EditText
        android:id="@+id/first_x_input"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="numberSigned|numberDecimal"
        android:maxLength="16"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/first_x"
        app:layout_constraintStart_toEndOf="@id/first_x"
        app:layout_constraintTop_toTopOf="@+id/first_x" />

    <TextView
        android:id="@+id/first_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/coord_y"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_x" />

    <EditText
        android:id="@+id/first_y_input"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="numberSigned|numberDecimal"
        android:maxLength="16"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/first_y"
        app:layout_constraintStart_toEndOf="@id/first_x"
        app:layout_constraintTop_toTopOf="@+id/first_y" />

    <TextView
        android:id="@+id/first_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/radius"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_y" />

    <EditText
        android:id="@+id/first_radius_input"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="numberDecimal"
        android:maxLength="16"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/first_radius"
        app:layout_constraintStart_toEndOf="@id/first_x"
        app:layout_constraintTop_toTopOf="@+id/first_radius" />

    <TextView
        android:id="@+id/second_circle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/second_circle"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_radius_input" />

    <TextView
        android:id="@+id/second_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/coord_x"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_circle_title" />

    <EditText
        android:id="@+id/second_x_input"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="numberSigned|numberDecimal"
        android:maxLength="16"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/second_x"
        app:layout_constraintStart_toEndOf="@id/second_x"
        app:layout_constraintTop_toTopOf="@+id/second_x" />

    <TextView
        android:id="@+id/second_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/coord_y"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_x" />

    <EditText
        android:id="@+id/second_y_input"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="numberSigned|numberDecimal"
        android:maxLength="16"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/second_y"
        app:layout_constraintStart_toEndOf="@id/second_x"
        app:layout_constraintTop_toTopOf="@+id/second_y" />

    <TextView
        android:id="@+id/second_radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/radius"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_y" />

    <EditText
        android:id="@+id/second_radius_input"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:inputType="numberDecimal"
        android:maxLength="16"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/second_radius"
        app:layout_constraintStart_toEndOf="@id/second_x"
        app:layout_constraintTop_toTopOf="@+id/second_radius" />

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/results"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_radius_input" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/results" />


</androidx.constraintlayout.widget.ConstraintLayout>