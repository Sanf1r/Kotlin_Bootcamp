<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/circles_module"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/circles_module_title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/thermohydrometer_module"
        app:layout_constraintEnd_toEndOf="@id/thermohydrometer_module"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/prime_numbers_module"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/prime_numbers_module_title"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/thermohydrometer_module"
        app:layout_constraintEnd_toEndOf="@id/thermohydrometer_module"
        app:layout_constraintTop_toBottomOf="@+id/circles_module" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/thermohydrometer_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/thermohydrometer_module_title"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prime_numbers_module" />

</androidx.constraintlayout.widget.ConstraintLayout>